{
  "compilerOptions": {
    "target": "es2016",                                  
    "lib": ["ES6"],                                        
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                  
    "module": "commonjs",                                
    "rootDir": "./src",                                 
    "typeRoots": [
      "./node_modules/@type",
      "./src/@types"
    ],                                                         
  
    "allowJs": true,                                  
     "outDir": "./dist",                                   
      "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true                                
  }
}
